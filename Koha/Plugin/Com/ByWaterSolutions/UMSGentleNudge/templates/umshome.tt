        function populateConfigTable(config) {
            ConfigTable.clear();

            config.forEach(function(config) {
                let statusBadge = config.enabled
                    ? '<span class="badge bg-success">Enabled</span>'
                    : '<span class="badge bg-secondary">Disabled</span>';

                // Use name, description, or command snippet for identification
                let configIdentifier = config.id;

                // Build description cell with name at top if present
                let descriptionHtml = '';
                if (config.name) {
                    descriptionHtml += '<strong>' + config.name + '</strong><br>';
                }

                let actions = `
                    <button class="btn btn-xs btn-primary edit-config" data-config-id="${config.id}">
                        <i class="fa fa-edit"></i> Edit
                    </button>
                    <button class="btn btn-xs ${config.enabled ? 'btn-warning disable-config' : 'btn-success enable-config'}" data-config-id="${config.id}">
                        <i class="fa ${config.enabled ? 'fa-pause' : 'fa-play'}"></i> ${config.enabled ? 'Disable' : 'Enable'}
                    </button>
                    <button class="btn btn-xs btn-danger delete-config" data-config-id="${config.id}" data-config-desc="${config.id}">
                        <i class="fa fa-trash"></i> Delete
                    </button>
                `;

                configTable.row.add([
                    statusBadge,
                    '<code class="schedule-preview">' + config.schedule + '</code>',
                    '<code>' + config.command + '</code>',
                    descriptionHtml,
                    envVars,
                    new Date(config.updated_at).toLocaleDateString(),
                    actions
                ]);
            });

            configTable.draw();

            // Hide spinner and show table
            $('#config_table').show();

            // Bind action handlers
            bindActionHandlers();
        }

        function bindActionHandlers() {
            $('.edit-config').off('click').on('click', function() {
                let configId = $(this).data('config-id');
                openConfigModal(configId);
                    });

            $('.enable-config, .disable-config').off('click').on('click', function() {
                let configId = $(this).data('config-id');
                let enable = $(this).hasClass('enable-config');
                toggleconfigStatus(configId, enable);
            });

            $('.delete-config').off('click').on('click', function() {
                let configId = $(this).data('config-id');
                let configDesc = $(this).data('config-desc');
                openDeleteModal(configId, configDesc);
            });
        }
